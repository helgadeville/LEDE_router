#!/bin/sh
echo "Content-Type: application/json; charset=utf-8"
echo ""
ALL=`ls /root/stations`
RET="["
comma=
for file in $ALL
 do
  ssid=`echo $file | sed 's/"/\\\\"/g'`
  RET="$RET$comma{\"ssid\":\"$ssid\""
  while IFS='' read -r line || [[ -n "$line" ]]; do
    json=`echo $line | sed 's/"/\\\\"/g ; s/^\([^=]*\)=\(.*\)/"\1":"\2"/'`
    [ -n $json ] && RET="$RET,$json"
  done < "/root/stations/$file"
  RET="$RET}"
  comma=","
done
RET="$RET]"
echo $RET
