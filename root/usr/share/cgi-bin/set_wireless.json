#!/bin/sh
# accepts $device $iface $disabled $key $ssid
# include POST/GET READER
. /usr/share/cgi-bin/request
echo "Content-Type: application/json; charset=utf-8"
echo ""
# check arguments
if [ -z "$device" -o -z "$iface" -o -z "$disabled" ];
 then
  echo "{\"status\":\"1\",\"message\":\"No parameters\"}"
  exit 1
fi
device="$device" iface="$iface" disabled="$disabled" ssid="$ssid" key="$key" sudo -E /usr/share/cgi-bin/_set_wireless.sh > /dev/null 2>&1
if [ $? -gt 0 ];
 then
  echo "{\"status\":\"1\",\"message\":\"Bad or missing parameters\"}"
 else
  echo "{\"status\":\"0\",\"message\":\"OK\"}"
fi
